@model MeditGestionRisqueLesire.Models.ChoixLangue

<div class="jumbotron">
    <h1>Choix de langues</h1>
</div>

<p class="lead">Le choix de la langue s'applique uniquement sur les données stockées et non les libellées. </p>

@using (Html.BeginForm("Select", "Langues"))
{
    @Html.AntiForgeryToken()
    @Html.DropDownListFor(model => model.IdLangue, (IEnumerable<SelectListItem>)ViewBag.Langues, htmlAttributes: new { @class = "form-control-Langue" })
    <button type="submit" class="btn btn-default">Sélectionner</button>   
}
