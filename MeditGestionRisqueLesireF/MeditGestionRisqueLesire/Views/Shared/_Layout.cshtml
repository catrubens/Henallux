<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Medit Gestion des risques</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medit", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>

                    <li>
                       <a>Liste</a> 
                        <ul>
                            <li class="navTree">@Html.ActionLink("Liste des travailleurs", "Index", "Travailleurs")</li>
                            <li class="navTree">@Html.ActionLink("Liste des risques", "Index", "TypeRisques")</li>
                            <li class="navTree">@Html.ActionLink("Liste des examens", "Index", "TypeExamen")</li>
                        </ul>
                    </li>

                    <li>
                       <a>Associer</a>
                        <ul class="submenu">
                            <li class="navTree">@Html.ActionLink("Associer un risque au travailleur", "Index", "examen_en_fonction_du_risque")</li>
                            <li class="navTree">@Html.ActionLink("Associer un examen au travailleur", "Index", "examen_particulier")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Langues", "Index", "Langues")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Antoine Lesire</p>
        </footer>
    </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
